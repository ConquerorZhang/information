.container {
  padding: 20rpx 10rpx 0;
}
.container .title {
    font-size: 40rpx;
    font-weight: 900;
}
.container .lineView {
    margin: 20rpx 0;
    border-bottom: 0.5rpx solid #C0C0C0;
}
.container .contentView {
    min-height: 300rpx;
    margin-bottom: 50rpx;
}
.container .contentView .content {
      width: 100%;
      font-size: 35rpx;
}
.container .uni-uploader__files {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
        -ms-flex-direction: row;
            flex-direction: row;
    -webkit-flex-wrap: wrap;
        -ms-flex-wrap: wrap;
            flex-wrap: wrap;
}
.container .uni-uploader__files .uni-uploader__file {
      margin: 10rpx;
      width: 210rpx;
      height: 210rpx;
}
.container .uni-uploader__files .uni-uploader__file .uni-uploader__img {
        display: block;
        width: 210rpx;
        height: 210rpx;
        padding-bottom: 20rpx;
        padding-right: 20rpx;
}
.container .uni-uploader__files .uni-uploader__file .close-view {
        text-align: center;
        line-height: 14px;
        height: 16px;
        width: 16px;
        border-radius: 50%;
        background: #FF5053;
        color: #FFFFFF;
        position: absolute;
        top: -6px;
        right: -4px;
        font-size: 12px;
}
.container .uni-uploader__input-box {
    display: inline-block;
    position: relative;
    margin: 10rpx;
    width: 208rpx;
    height: 208rpx;
    border: 2rpx solid #D9D9D9;
}
.container .uni-uploader__input-box:before,
  .container .uni-uploader__input-box:after {
    content: " ";
    position: absolute;
    top: 40%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
    background-color: #D9D9D9;
}
.container .uni-uploader__input-box:before {
    width: 4rpx;
    height: 79rpx;
}
.container .uni-uploader__input-box:after {
    width: 79rpx;
    height: 4rpx;
}
.container .uni-uploader__input-box:active {
    border-color: #999999;
}
.container .uni-uploader__input-box:active:before,
  .container .uni-uploader__input-box:active:after {
    background-color: #999999;
}
.container .uni-uploader__text {
    position: absolute;
    text-align: center;
    color: #999999;
    z-index: 1;
    top: 70%;
    left: 0;
    width: 100%;
}
.container .typeModel {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
        -ms-flex-pack: justify;
            justify-content: space-between;
    margin: 50rpx 20rpx;
    font-size: 32rpx;
}
.container .typeModel .unSelectBtn {
      color: #808080;
      border-radius: 40rpx;
      background: #F1F1F1;
      padding: 10rpx 30rpx;
}
.container .typeModel .selectBtn {
      color: #FFFFFF;
      border-radius: 40rpx;
      background: -webkit-gradient(linear, left top, right top, from(#D74819), to(#C7161E));
      background: -o-linear-gradient(left, #D74819, #C7161E);
      background: linear-gradient(to right, #D74819, #C7161E);
      padding: 10rpx 30rpx;
}

