<view class="container"><block wx:for="{{dataList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="message"><view class="titleRow"><text class="title">{{item.title}}</text><text class="{{[item.state==1?'read':'unread']}}">{{item.state==1?"已读":"未读"}}</text></view><block wx:if="{{item.image.length>0}}"><image src="{{item.image}}" mode="widthFix"></image></block><view class="subTitle">{{item.subtitle}}</view><view class="time">{{item.time}}</view></view></block></view>